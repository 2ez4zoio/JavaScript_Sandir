    <h1>Maior String</h1>

    <script>
        var strings = ["pera","uva","melao","banana","laranja","manga","toranja","morango"];

    
        var StringMaior = strings[0];
        for (var i = 1; i < strings.length; i++) {
        if (strings[i].length > StringMaior.length) {
                StringMaior = strings[i];
            }
        }

        document.write("<p>Array de strings: [" + strings.join(", ") + "]</p>");
        document.write("<p>A maior string no array Ã©: " + StringMaior + "</p>");
    </script>

